<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"

    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"

    tools:context="com.shadowcoder.courtneyscorner.activity.crossword.CrosswordActivity">

    <com.shadowcoder.courtneyscorner.activity.crossword.view.CrosswordLayout
        android:id="@+id/gridview"
        android:background="@color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/black" />

    <com.shadowcoder.courtneyscorner.view.Header
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="60dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black" />

    <com.shadowcoder.courtneyscorner.view.Keyboard
        android:id="@+id/keyboard"
        android:layout_width="match_parent"
        android:layout_height="fill_parent" />
</LinearLayout>
